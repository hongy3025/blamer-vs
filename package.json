{
    "name": "svn-blame",
    "displayName": "SVN Blame",
    "description": " SVN blame code line-by-line",
    "version": "1.0.0",
    "publisher": "hongy3025",
    "repository": {
        "type": "git",
        "url": "https://github.com/hongy3025/vscode-svn-blame.git"
    },
    "bugs": {
        "url": "https://github.com/hongy3025/vscode-svn-blame/issues"
    },
    "homepage": "https://github.com/hongy3025/vscode-svn-blame",
    "icon": "img/blamer.png",
    "license": "MIT",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "SCM Providers",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "svn-blame.show",
                "title": "SVN Blame"
            },
            {
                "command": "svn-blame.clear",
                "title": "Clear SVN Blame"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "SVN Blame configuration",
            "properties": {
                "svn-blame.showGutterIcon": {
                    "type": "boolean",
                    "default": true,
                    "description": "行前是否显示blame图示"
                },
                "svn-blame.historyDaysLimit": {
                    "type": "number",
                    "default": 365,
                    "description": "Blame多少天之内的历史提交"
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "svn-blame.show",
                    "alt": "svn-blame.clear",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "pnpm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.30",
        "@types/vscode": "^1.87.0",
        "@vscode/test-cli": "^0.0.8",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.57.0",
        "typescript": "^5.4.3"
    }
}